# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_VERSION=v1
API_TITLE=Bank Statement Reconciliation API
API_DESCRIPTION=AI-powered middleware for Nigerian bank statement reconciliation

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=*

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
MAX_BATCH_SIZE=100
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp
RETENTION_DAYS=7

# DocuClipper Integration
DOCUCLIPPER_API_URL=https://api.docuclipper.com/v1
DOCUCLIPPER_API_KEY=
DOCUCLIPPER_TIMEOUT=30

# Database (Future)
DATABASE_URL=sqlite:///./bankstate.db
# DATABASE_URL=postgresql://user:password@localhost/bankstate

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/bankstate.log

# Processing
ASYNC_PROCESSING=False
WORKER_TIMEOUT=300
MAX_RETRIES=3

# AI Model (Future)
MODEL_PATH=./models
HF_MODEL_NAME=microsoft/layoutlm-base-uncased
USE_GPU=False

# Monitoring
ENABLE_METRICS=True
HEALTH_CHECK_INTERVAL=60
